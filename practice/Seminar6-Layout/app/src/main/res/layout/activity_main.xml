<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <fragment
            android:id="@+id/fragment_first"
            android:name="ru.gcsales.seminar6.fragments.FirstFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/fragment_third"
            android:name="ru.gcsales.seminar6.fragments.ThirdFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <fragment
            android:id="@+id/fragment_second"
            android:name="ru.gcsales.seminar6.fragments.SecondFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <fragment
            android:id="@+id/fragment_fourth"
            android:name="ru.gcsales.seminar6.fragments.FourthFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
